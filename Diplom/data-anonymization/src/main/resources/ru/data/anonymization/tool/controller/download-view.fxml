<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ru.data.anonymization.tool.controller.DownloadView"
            fitToHeight="true"
            fitToWidth="true"
            prefHeight="140.0" prefWidth="400.0">

    <VBox>
        <HBox VBox.vgrow="ALWAYS" style="-fx-alignment: center;-fx-padding: 10px 0px;" spacing="10">
            <Button text="Выбрать файл" onAction="#chooseFile"/>
            <Label fx:id="filePath" text="Файл неуказан" style="-fx-padding: 0px 10px 0px 0px;"/>
        </HBox>
        <HBox fx:id="buttonContainer" style="-fx-alignment: center;-fx-padding: 10px 0px;" spacing="10"/>
    </VBox>
</ScrollPane>