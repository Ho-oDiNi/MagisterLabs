<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ru.data.anonymization.tool.controller.method.DecompositionView"
            fitToHeight="true"
            fitToWidth="true"
            prefHeight="400.0" prefWidth="600.0">

    <VBox>
        <HBox style="-fx-alignment: center;-fx-padding: 10px 0px;">
            <Label text="Название:" style="-fx-padding: 0px 10px 0px 0px;"/>
            <TextField fx:id="customName" minWidth="450"/>
        </HBox>
        <HBox style="-fx-alignment: center;-fx-padding: 10px 0px;">
            <Label text="Таблица:" style="-fx-padding: 0px 10px 0px 0px;"/>
            <TextField fx:id="tableName" minWidth="450" disable="true"/>
        </HBox>
        <HBox style="-fx-alignment: center;-fx-padding: 10px 0px;">
            <Label text="Новая таблица:" style="-fx-padding: 0px 10px 0px 0px;"/>
            <TextField fx:id="newTableName" minWidth="450"/>
        </HBox>


        <HBox style="-fx-alignment: center;-fx-padding: 10px 0px;">
            <Label text="Хост:" style="-fx-padding: 0px 10px 0px 0px;"/>
            <TextField fx:id="host" minWidth="450"/>
        </HBox>
        <HBox style="-fx-alignment: center;-fx-padding: 10px 0px;">
            <Label text="Порт:" style="-fx-padding: 0px 10px 0px 0px;"/>
            <TextField fx:id="port" minWidth="450"/>
        </HBox>
        <HBox style="-fx-alignment: center;-fx-padding: 10px 0px;">
            <Label text="База данных:" style="-fx-padding: 0px 10px 0px 0px;"/>
            <TextField fx:id="database" minWidth="450"/>
        </HBox>
        <HBox style="-fx-alignment: center;-fx-padding: 10px 0px;">
            <Label text="Пользователь:" style="-fx-padding: 0px 10px 0px 0px;"/>
            <TextField fx:id="username" minWidth="450"/>
        </HBox>
        <HBox style="-fx-alignment: center;-fx-padding: 10px 0px;">
            <Label text="Пароль:" style="-fx-padding: 0px 10px 0px 0px;"/>
            <PasswordField fx:id="password" minWidth="450"/>
        </HBox>

        <HBox VBox.vgrow="ALWAYS" style="-fx-padding: 16px;" spacing="10" minHeight="200">
            <ListView fx:id="leftListView" VBox.vgrow="ALWAYS" onMouseClicked="#moveToRightClick"/>
            <VBox alignment="CENTER">
                <VBox style="-fx-padding: 0px 0px 5px 0px">
                    <Button text="→" onAction="#moveToRight"/>
                </VBox>
                <VBox style="-fx-padding: 5px 0px 0px 0px">
                    <Button text="←" onAction="#moveToLeft"/>
                </VBox>
            </VBox>
            <ListView fx:id="rightListView" VBox.vgrow="ALWAYS" onMouseClicked="#moveToLeftClick"/>
        </HBox>
        <HBox fx:id="buttonContainer" style="-fx-alignment: center;-fx-padding: 10px 0px;" spacing="10"/>
    </VBox>
</ScrollPane>